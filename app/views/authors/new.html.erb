<h1>Add a new author <h1>
  
<% if current_user.admin? %> 

  <%=form_for @author do |f| %>
  <p>
    <%=f.label :name %><br>
    <%=f.text_field :name, size: 40 %>
  </p>
  <p>
    <%=f.submit %>
  </p>
  <% end %>
  
<% else %>
  <p> You are not authorized to view this page </p>
<% end %>
  
<p> <%=link_to 'Back to the main menu', :controller => :welcom, :action => :index %> </p>